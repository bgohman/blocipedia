<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Edit this wiki</p>
      <ul>
        <li>placeholder instruction 1.</li>
        <li>placeholder instruction 2.</li>
        <li>placeholder instruction 3.</li>
      </ul>
    <h4> Wiki Collaborators</h4>
    <% @collaborations.each do |collaboration| %>
      <p><%= collaboration.user.name %> | <%= link_to "remove this collaborator", collaboration_path, method: :delete, data: { confirm: "Are you sure?" }  %></p>
    <% end %>    
    <%= form_for(@wiki.collaborations.build) do |f| %>
    <div class="form-group">
      <div><%= hidden_field_tag :wiki_id, @wiki.id %></div>
      <%= f.label "Add collaborators:" %>
      <%= f.text_field :user_id, class: 'form-control', placeholder: "enter the user's email" %>
      <%= f.submit "Add" %>
    </div>
    <% end %>
  </div>

  <div class="col-md-8">
  <%= form_for @wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "wiki title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "wiki body..." %>
    </div>
    <div class="form-group">
    <% if policy(Wiki.new).premium? %>
      <% if current_user == @wiki.user %>
        <div class="form-group">
        <%= f.label :private %>
        <%= f.check_box :private, class: 'form-control' %>
        </div>
      <% end %>
    <% else %>
      <%= link_to "Upgrade to a premium account?", new_charge_path %></br>
    <% end %>
    <%= f.submit "Save", class: 'btn btn-success' %>

  <% end %>